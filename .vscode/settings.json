{
    "[python]": {
        "editor.defaultFormatter": "ms-python.python",
        "editor.suggest.showFunctions": true,
        "editor.suggest.showModules": true,
        "editor.suggest.showColors": true,
        "editor.suggest.showReferences": true
    },
    "search.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/*.pyo": true,
        "**/venv": true,
        "**/.venv": true
    },
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/*.pyo": true,
        "**/venv": true,
        "**/.venv": true
    }
}
